<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
  <div class="row">
    <%= render 'users/userInfo', {user: @user, book: @book} %>
    <div class="col-sm-6">
      <h1>Books</h1>
      <table class="table table-striped">
        <tr>
          <th>User</th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format:'jpeg', class:"img-circle pull-left profile-img", fallback:"no_image.jpg" %></td>
          <td><%= link_to "#{book.title}", book_path(book), class:"book_#{book.id}" %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
</section>
