<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


<body>
<div class="header" id="header">
  <nav class="navbar navbar-inverse navbar-main navbar-shadow" role="navigation" id="slide-nav">
    <div class="container relative">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Bookers</a>
    </div>
          <div class="sidemenu">
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
              <% if user_signed_in? %>
                <li class="">
                  <%=link_to "Home", user_path(current_user), class:"home glyphicon glyphicon-home" %>
                </li>
                <li class="">
                  <%=link_to "Users", users_path, class:"users glyphicon glyphicon-user" %>
                </li>
                <li class="">
                  <%=link_to "Books", books_path, class:"books glyphicon glyphicon-book" %>
                </li>
                <li class="">
                  <%=link_to "logout", destroy_user_session_path, method: :delete, class:"logout glyphicon glyphicon-log-out" %>
                </li>
              <% else %>
                <li class="">
                  <%=link_to "Home", root_path, class:"home glyphicon glyphicon-home" %>
                </li>
                <li class="">
                  <%=link_to "About", "/home/about", class:"about glyphicon glyphicon-link" %>
                </li>
                <li class="">
                  <%= link_to "sign up", new_user_registration_path, class:"sign_up glyphicon glyphicon-edit" %>
                </li>
                <li class="">
                  <%= link_to "login", new_user_session_path, class:"sign_in glyphicon glyphicon-log-in" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <% if flash[:notice] %>
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
      <div class="notice">
        <%= flash[:notice] %>
      </div>
      </div>
    </div>
    <% end %>
    <% if flash[:errors] %>
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
      <div class="notice">
        <%= flash[:errors].count %>error<br>
        <% flash[:errors].each do |error| %>
          <%= error %><br>
        <% end %>
      </div>
      </div>
    </div>
    <% end %>


    <%= yield %>
  </body>
</html>
